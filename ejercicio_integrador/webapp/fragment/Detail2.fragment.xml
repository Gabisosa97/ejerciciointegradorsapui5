<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
>
    <FlexBox
        alignItems="Center"
        class="sapUiSmallMargin"
    >
        <f:Form
            visible="{detail>/visible}"
            editable="true"
        >
            <f:title>
                <core:Title text="{i18n>Edit}" />
            </f:title>
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false"
                />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>Address}">
                            <f:fields>
                                <Input
                                    placeholder="{OrderSelected>/Address}"
                                    type="Text"
                                    value="{OrderSelected>/Address}"
                                    class="sapUiSmallMarginTopBottom"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>City}">
                            <f:fields>
                                <Input
                                    placeholder="{OrderSelected>/City}"
                                    type="Text"
                                    value="{OrderSelected>/City}"
                                    class="sapUiSmallMarginTopBottom"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>CompanyName}">
                            <f:fields>
                                <Input
                                    placeholder="{OrderSelected>/CompanyName}"
                                    type="Text"
                                    value="{OrderSelected>/CompanyName}"
                                    class="sapUiSmallMarginTopBottom"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>Country}">
                            <f:fields>
                                <Input
                                    placeholder="{OrderSelected>/Country}"
                                    type="Text"
                                    value="{OrderSelected>/Country}"
                                    class="sapUiSmallMarginTopBottom"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>Freight}">
                            <f:fields>
                                <Input
                                    placeholder="{OrderSelected>/Freight}"
                                    type="Text"
                                    value="{OrderSelected>/Freight}"
                                    class="sapUiSmallMarginTopBottom"
                                />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>PostalCode}">
                            <f:fields>
                                <Input
                                    placeholder="{OrderSelected>/PostalCode}"
                                    type="Text"
                                    value="{OrderSelected>/PostalCode}"
                                    class="sapUiSmallMarginTopBottom"
                                />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
    </FlexBox>
</core:FragmentDefinition>
