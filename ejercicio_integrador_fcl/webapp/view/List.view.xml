<mvc:View
    controllerName="acc.fcl.ejerciciointegradorfcl.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Button
        icon="sap-icon://world"
        text=""
        press="changeLang"
    />
    <Page
        id="page"
        title="{i18n>title}"
    >
        <VBox
            alignItems="Center"
            width="100%"
            class="sapUiContentPadding"
        >
            <HBox
                alignContent="SpaceBetween"
                class="sapUiSmallMargin"
            >
                <ComboBox
                    id="countryBox"
                    placeholder="{i18n>Placeholder} {i18n>Country}"
                    selectedKey="{filters>/country}"
                    items="{
					path: 'countries>/countries',
					sorter: { path: 'name' }
				}"
                >
                    <core:Item
                        key="{countries>name}"
                        text="{countries>name}"
                    />
                </ComboBox>
                <ComboBox
                    id="cityBox"
                    placeholder="{i18n>Placeholder} {i18n>City}"
                    selectedKey="{filters>/city}"
                    items="{
					path: 'cities>/cities',
					sorter: { path: 'name' }
				}"
                >
                    <core:Item
                        key="{cities>name}"
                        text="{cities>name}"
                    />
                </ComboBox>
                <Button
                    type="Emphasized"
                    text="{i18n>Search}"
                    press="onSearch"
                />
                <Button
                    type="Ghost"
                    text="{i18n>Clear}"
                    press="onClear"
                />
            </HBox>
        </VBox>
        <Table
            id="idTableOrders"
            inset="false"
            items="{path: 'OrdersModel>/',sorter: {path:'CompanyName'}}"
        >
            <columns>
                <Column>
                    <Text text="{i18n>OrderID}" />
                </Column>
                <Column>
                    <Text text="{i18n>CustomerID}" />
                </Column>
                <Column>
                    <Text text="{i18n>CompanyName}" />
                </Column>
                <Column>
                    <Text text="{i18n>City}" />
                </Column>
                <Column>
                    <Text text="{i18n>Country}" />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    press="navTo"
                    type="Navigation"
                >
                    <cells>
                        <ObjectIdentifier text="{OrdersModel>OrderID}" />
                        <ObjectIdentifier text="{OrdersModel>CustomerID}" />
                        <ObjectIdentifier text="{OrdersModel>CompanyName}" />
                        <ObjectIdentifier text="{OrdersModel>City}" />
                        <ObjectIdentifier
                            text="{path: 'OrdersModel>Country',formatter:'.Formatter.formatCountry'}"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Page>
</mvc:View>
