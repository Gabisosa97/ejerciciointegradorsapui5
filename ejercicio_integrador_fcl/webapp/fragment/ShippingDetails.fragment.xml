<core:FragmentDefinition
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <ObjectPageSection title="{i18n>ShippingDetails}">
        <subSections>
            <ObjectPageSubSection>
                <blocks>
                    <form:SimpleForm
                        maxContainerCols="2"
                        editable="false"
                        layout="ResponsiveGridLayout"
                        labelSpanL="12"
                        labelSpanM="12"
                        emptySpanL="0"
                        emptySpanM="0"
                        columnsL="1"
                        columnsM="1"
                    >
                        <form:content>
                            <m:Label text="{i18n>ShipAddress}" />
                            <m:Text text="{OrdersModel>ShipAddress}" />

                            <m:Label text="{i18n>ShipCity}" />
                            <m:Text text="{OrdersModel>ShipCity}" />

                            <m:Label text="{i18n>ShipCountry}" />
                            <m:Text text="{OrdersModel>ShipCountry}" />

                            <m:Label text="{i18n>ShipName}" />
                            <m:Text text="{OrdersModel>ShipName}" />

                            <m:Label text="{i18n>ShipPostalCode}" />
                            <m:Text text="{OrdersModel>ShipPostalCode}" />

                            <m:Label text="{i18n>ShipRegion}" />
                            <m:Text text="{OrdersModel>ShipRegion}" />

                            <m:Label text="{i18n>ShipVia}" />
                            <m:Text text="{OrdersModel>ShipVia}" />

                            <m:Label text="{i18n>ShippedDate}" />
                            <m:Text text="{OrdersModel>ShippedDate}" />
                        </form:content>
                    </form:SimpleForm>
                </blocks>
            </ObjectPageSubSection>
        </subSections>
    </ObjectPageSection>
</core:FragmentDefinition>
